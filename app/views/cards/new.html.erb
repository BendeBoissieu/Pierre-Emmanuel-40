<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Envoyer une nouvelle carte</h1>

      <%= simple_form_for [@card] do |f| %>

      <%= f.input :name %>
      <%= f.input :title %>
      <%= f.input :content %>
      <%= f.input :avatar %>
      <%= f.input :avatar_cache, as: :hidden %>




        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

