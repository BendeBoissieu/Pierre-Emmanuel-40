
<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>Special anniversaire Pierre-Em</h1>
    </div>
  </div>



  <div class="row">
    <% @cards.each do |card| %>
      <div class="col-4">
        <div class="card-card">
          <div class="card-card-image" style="background-image: url('<%= card.avatar %>')"></div>
          <div class="card-card-content">
            <div class="card-card-title">
              <h4><%= card.name %></h4>
            </div>
            <p><%= card.content %></p>
            <div class="flex">
              <div class="flex">
                <i class="material-icons mr-2">people</i><span></span>
              </div>
              <div class="flex ml-3">
                <i class="material-icons mr-2">euro_symbol</i>
              </div>
            </div>
          </div>
          <div class="card-card-actions">
            <%= link_to 'More info', card_path(card) %>
            <a href="#" class="ml-3 text-warning">Edit</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


