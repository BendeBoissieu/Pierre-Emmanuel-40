
<link href="https://fonts.googleapis.com/css?family=Gloria+Hallelujah" rel="stylesheet">
<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1 style="text-align:center; font-family: 'Gloria Hallelujah', cursive;">Bon anniversaire Pierre-Em</h1>
    </div>
  </div>

 <div class="row">
<% @cards.each do |card| %>


    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.2)), url('<%= image_path '40-b.jpg' %>');">
        <div class="card-category"><%= card.name %></div>
        <div class="card-description">
          <h2><%= card.title %></h2>


        <%= link_to "Voir le gentil mot", card_path(card), class: "card-link" %>
        </div>

      </div>
    </div>

  <% end %>
</div>

